<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}El Frikibuscador{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}" />
        {% endblock %}
    </head>
    <body>
        <div class="container">
            {% block body %}
                <div class="row">
                    <div class="col-12 main-search-form">
                        <img class="frikipedia-logo" src="{{ asset('assets/img/Logo_Frikipedia.png') }}" alt="logo de la frikipedia" />
                        {{ render(controller('App\\Controller\\SearchController:searchForm')) }}
                    </div>
                </div>
            {% endblock %}
        </div>
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
            <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
